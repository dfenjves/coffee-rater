<!doctype html>
<html>
  <head>
    <title>Coffee Rater</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <div class="container-fluid">
      <header class=".text-center">
        <h1>Rate My Coffee</h1>
      </header>
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <form role="form" class="form-inline" action="/" method="post" >
          <div class="form-group">
            <label class="sr-only" for="coffee">Coffee:</label>
            <input type="text" class="form-control" name="name" placeholder="Coffee Name">
          </div>
          <br>
          <div class="form-group">
            <label for="grind">Grind:</label>
            <select name="grind">
              <option value="fine">Fine</option>
              <option value="medium">Medium</option>
              <option value="coarse">Coarse</option>
            </select>
          </div>
          <br>
          <div class="form-group">
            <label for="tamp">Tamp Pressure:</label>
            <select name="tamp">
              <option value="fine">Light</option>
              <option value="medium">Medium</option>
              <option value="coarse">Heavy</option>
            </select>
          </div>
          <br>
          <div class="form-group">
            <label for="rating" class="sr-only">Rating:</label>
            <input type="number" min="1" max="10" class="form-control" placeholder="Rating" name="rating">
          </div>
          <br>
          <div class="form-group">
            <label for="notes" class="sr-only">Notes:</label>
            <textarea rows="2" cols="20" name="notes" class="form-control" placeholder="Notes"></textarea>
          </div>
          <br>
          <div class="form-group">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>
  </body>
</html>