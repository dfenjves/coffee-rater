<!doctype html>
<html>
  <head>
    <title>Coffee Rater</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <div class="container-fluid">
      <header class=".text-center">
        <h1>Rate My Coffee</h1>
      </header>
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Coffee Name</th>
              <th>Grind</th>
              <th>Tamp</th>
              <th>Rating</th>
              <th>Notes</th>
            </tr>
          </thead>
          <tbody>
            <% Coffee.all.each do |coffee| %>
              <tr>
                <td><%= coffee.name %></td>
                <td><%= coffee.grind %></td>
                <td><%= coffee.tamp %></td>
                <td><%= coffee.rating %></td>
                <td><%= coffee.notes %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-3"></div>
    </div>
  </body>
</html>